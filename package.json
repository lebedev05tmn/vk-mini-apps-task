{
  "name": "vk-mini-apps-task",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "test": "jest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "tunnel": "vk-tunnel",
    "deploy": "vk-miniapps-deploy"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.module.(css|scss)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": ".test.(ts|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.3",
    "@vkontakte/vk-bridge": "^2.14.1",
    "@vkontakte/vk-mini-apps-router": "^1.4.3",
    "@vkontakte/vk-miniapps-deploy": "^0.1.7",
    "@vkontakte/vk-tunnel": "^0.2.0",
    "@vkontakte/vkui": "^6.0.2",
    "axios": "^1.6.8",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.1",
    "redux-thunk": "^3.1.0",
    "sass": "^1.75.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.5",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.6",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-test-renderer": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jest-css-modules": "^2.1.0",
    "react-test-renderer": "^18.3.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
